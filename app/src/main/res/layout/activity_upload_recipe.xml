<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.UploadRecipeActivity">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/colorPrimary" />

    <ImageView

        android:layout_margin="8dp"
        android:layout_width="71dp"
        android:layout_height="55dp"
        android:src="@drawable/foodie" />

    <ImageView
        android:layout_gravity="right"
        android:layout_margin="8dp"
        android:layout_width="71dp"
        android:layout_height="55dp"
        android:onClick="logout"
        android:src="@drawable/ic_baseline_add_24" />

    <ImageView
        android:layout_marginTop="8dp"
        android:layout_width="83dp"
        android:layout_height="67dp"
        android:layout_marginLeft="60dp"
        android:src="@drawable/foodieword" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp">

        <LinearLayout
            android:orientation="vertical"
            android:padding="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_uploaded"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/foodie"
                android:scaleType="centerCrop"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Recipe Name"
                android:id="@+id/txt_recipe_name"
                android:textSize="19dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Category"
                android:id="@+id/txt_recipe_category"
                android:textSize="19dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Country"
                android:id="@+id/txt_recipe_country"
                android:textSize="19dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Ingredients"
                android:id="@+id/txt_recipe_ingredients"
                android:textSize="19dp"/>

            <Button

                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Upload Image"
                android:layout_gravity="center"
                android:onClick="btnSelectImage"
                android:textColorHint="@color/colorWhite"
                android:background="@color/colorPrimaryDark"
                android:textSize="19dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Add Recipe"
                android:id="@+id/upload_recipe"
                android:textColorHint="@color/colorWhite"
                android:background="@color/colorPrimaryDark"
                android:onClick="btnUploadRecipe"
                android:textSize="19dp"/>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>