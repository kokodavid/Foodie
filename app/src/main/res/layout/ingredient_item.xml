<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    android:clickable="true"
    app:cardBackgroundColor="@android:color/transparent"
    android:focusable="true">


    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/detailImage"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_image_meal" />


        <TextView
            android:id="@+id/detailName"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailImage"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="-60dp"
            android:layout_marginEnd="160dp"
            android:layout_marginRight="160dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@+id/detailImage"
            android:layout_toRightOf="@+id/detailImage"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="3"
            android:text="@string/meal_categories"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="72dp"
            android:layout_height="23dp"
            android:layout_below="@id/detailImage"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="181dp"
            android:layout_marginLeft="181dp"
            android:layout_marginTop="-63dp"
            android:layout_marginEnd="49dp"
            android:layout_marginRight="49dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@+id/mealThumb"
            android:layout_toRightOf="@+id/mealThumb"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="3"
            android:text="@string/meal_categories"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/unit"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailImage"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="188dp"
            android:layout_marginLeft="188dp"
            android:layout_marginTop="-33dp"
            android:layout_marginEnd="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@+id/mealThumb"
            android:layout_toRightOf="@+id/mealThumb"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="3"
            android:text="@string/meal_categories"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>